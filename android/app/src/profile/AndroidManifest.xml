<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Permiso de INTERNET necesario para el desarrollo.
         La herramienta de Flutter lo requiere para comunicarse
         con la aplicación en ejecución, permitiendo establecer puntos
         de interrupción, proporcionar recarga en caliente, etc.
    -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
</manifest>